/* pages/user/user.wxss */
.UCenter-bg {
  background-size: cover;
  height: 375rpx;
  display: flex;
  justify-content: center;
  padding-top: 25rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: white;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.UCenter-bg text {
  opacity: 0.8;
}
.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}
.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
