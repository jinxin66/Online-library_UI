/* pages/login/login.wxss */
page{
  background-color: white;
}
.con{
  height: 500rpx;
  position: relative;
  display: -webkit-flex;
  flex-direction: column;
} 
.con-image{
  height: 500rpx;
  background-color: rgba(0,0,0,0.5);
}
.con-image image{
  width: 100%;
  height: 60%;
}
.con-text{
  margin-top: 36rpx;
  color: white;
  position: relative;
  bottom: 10rpx;
  text-align: center;
  font-size: 36rpx;
}
.inputBox{
  margin-top: 36rpx;
  padding: 16rpx;
}
.inputBox input{
  width: 80%;
  height: 100rpx;
  margin-left: 10%;
  margin-top:36rpx;
  background-color: rgb(246, 246, 246);
  border: 2px solid #ccc;
  border-radius: 40rpx;
}
.input-txt{
  font-size: 32rpx;
  color: #aaa;
  line-height: 36rpx;
}
.btn{
  margin-top: 48rpx;
  padding: 16rpx;
}
.btn button{
  width: 80%;
  color: white;
  margin-top: 48rpx;
  font-size: 36rpx;
  position: relative;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.4);
  border:1rpx solid white;
  border-radius: 40rpx;
}
.btn1{
  background: linear-gradient(to bottom  left,rgb(0, 0, 100), rgb(50, 50, 250));
}
.btn2{
  background: linear-gradient(to bottom  right,rgb(50, 250, 50), rgb(0, 100, 0));
}